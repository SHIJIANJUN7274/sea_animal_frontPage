.navBar {
  height: 500rpx;
  background-color: white;
  padding: 0 30rpx;
  padding-top: 20rpx;
  padding-top: 100rpx;
  overflow: hidden;
  background: linear-gradient(to bottom, #1296db, #f7f7f7);
}
.navBar .left {
  flex: 1;
  color: white;
  font-size: 40rpx;
  font-weight: 700;
}
.navBar .right {
  position: relative;
  margin-top: 20rpx;
  flex: 2;
}
.navBar input {
  padding: 10rpx 0rpx;
  padding-left: 60rpx;
  border: 1rpx solid #ccc;
  border-radius: 50rpx;
  font-size: 30rpx;
  background-color: white;
}
.navBar icon {
  position: absolute;
  left: 20rpx;
  top: 16rpx;
}
.swiper {
  height: 550rpx;
  margin: 0 20rpx;
  margin-top: -320rpx;
  border-radius: 50rpx;
  overflow: hidden;
}
.swiper image {
  width: 100%;
}
.goodsList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 0 20rpx;
  margin-bottom: 20rpx;
}
.goodsList .item {
  box-sizing: border-box;
  margin-top: 25rpx;
  width: 345rpx;
  height: 500rpx;
  border-radius: 20rpx;
  background-color: white;
  overflow: hidden;
}
.goodsList image {
  width: 100%;
  border-radius: 20rpx 20rpx 0 0;
}
.goodsList .goodsName-price {
  padding: 15rpx 20rpx;
}
.goodsList .goodsName-price .goodsName {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.goodsList .goodsName-price .price {
  display: flex;
  align-items: baseline;
  padding: 20rpx 0;
  font-size: 38rpx;
  font-weight: 700;
  color: red;
}
.goodsList .goodsName-price .yuan,
.goodsList .goodsName-price .decimal {
  font-size: 32rpx;
}
.goodsList .goodsName-price .sales {
  color: #646566;
  margin-left: 10rpx;
  font-weight: normal;
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}